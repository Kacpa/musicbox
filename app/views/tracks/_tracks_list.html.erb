<table class="tracks-table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% tracks.each do |track| %>
      <tr class="track-row">
        <td><span class="playing-status">></span></td>
        <td><%= track.name %></td>
        <td class="track-address"><%= track.address %></td>
        <td><%= link_to 'Destroy', guest_tracks_path(guest_id: track.guest_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><button onClick="playTrack('<%= track.address %>')">Play ></button></td>
      </tr>
    <% end %>
  </tbody>
</table>