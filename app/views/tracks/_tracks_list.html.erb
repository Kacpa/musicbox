<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% tracks.each do |track| %>
      <tr>
        <td><%= track.name %></td>
        <td><%= track.address %></td>
        <td><%= link_to 'Destroy', guest_tracks_path(guest_id: track.guest_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>