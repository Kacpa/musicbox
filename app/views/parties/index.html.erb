<p id="notice"><%= notice %></p>

<h1>Parties</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Access Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.name %></td>
        <td><%= party.access_code %></td>
        <td><%= link_to 'Show', party %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Delete', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Party', new_party_path, class: 'btn btn-primary') %>
